{
    "$schema": "./appsettings.schema.json",
    "NLog": {
        "throwConfigExceptions": true,
        "targets": {
            "trace": {
                "type": "Trace",
                "layout": "${logger:shortName=true:padding=-25}${message}${exception:format=tostring}"
            },
            "debug": {
                "deleteOldFileOnStartup": true,
                "type": "File",
                "concurrentWrites": "true",
                "fileName": "debug.log",
                "layout": "${logger:shortName=true:padding=-25}${message}${exception:format=tostring}"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Trace",
                "writeTo": "trace, debug"
            }
        ]
    }
}